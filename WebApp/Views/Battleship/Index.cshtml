@{
    ViewData["Title"] = "Battleship";
}

<div class="page">
    <div class="playfield">
        <div class="battlefield" id="defence">
            <table>
                @for (int i = 0; i < 7; i++)
                {
                    <tr>
                        @for (int j = 0; j < 7; j++)
                        {
                            <td><div id="@i@j"></div></td>
                        }
                    </tr>
                }
            </table>
        </div>

        <div class="battlefield" id="attack">
            <table>
                @for (int i = 0; i < 7; i++)
                {
                    <tr>
                        @for (int j = 0; j < 7; j++)
                        {
                            <td class="attack"><div id="@i@j"></div></td>
                        }
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/BattleShip.css" asp-append-version="true" />